  <body>
      <div class="row nav-row">
        <div class="col nav-column">
          <a class="nav-link" href="/index">Main Page</a>
        </div>
      </div>


    <div class="row">
      <header class="col jumbotron jumbotron-fluid">
        <div class="container-fluid">
          <h1 class="display-4 text-light">Noodle App</h1>
        </div>
      </header>
    </div>

<body>
    <div class="container">
        <div class="row">
          <div class="col-sm-6" style="padding-bottom: 30px;">
            <h2>Recipes</h2>
            <ul>
              <% for (let i = 0; i < recipes.length; i += 1) { %>
              <li><a href="/recipes/<%= i %>"><%=recipes[i].label %></a>
              <% if (favorite === `${i}`) { %>
                  <span style="color:red;"> (FAVORITE) </span>
              <% } %>
              </li>
              <% } %>
            </ul>
          </div>
      </div>
    </div>
</body>

</html>